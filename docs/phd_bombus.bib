	keywords = {Biodiversity, Conservation biology, Ecological epidemiology},
	pages = {1358--1367},
	file = {Accepted Version:/Users/jenna1/Zotero/storage/NC9LCNEP/Graystock et al. - 2020 - Dominant bee species and floral abundance drive pa.pdf:application/pdf},
