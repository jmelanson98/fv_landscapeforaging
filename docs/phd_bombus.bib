	year = {2008},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-2664.2007.01359.x},
	keywords = {Bombus, environmental stewardship schemes, gardens, nesting habitat, voluntary survey},
