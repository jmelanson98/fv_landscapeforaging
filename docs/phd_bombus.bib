@article{conroyFoodLimitationAffects2016,
	title = {Food {Limitation} {Affects} {Parasite} {Load} and {Survival} of {Bombus} impatiens ({Hymenoptera}: {Apidae}) {Infected} {With} {Crithidia} ({Trypanosomatida}: {Trypanosomatidae})},
