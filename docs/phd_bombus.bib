	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1755-263X.2012.00234.x},
	keywords = {Bombus, disease, habitat loss, pathogen spillover, pesticides, pollinator declines, range collapse},
	pages = {232--239},
	file = {Full Text PDF:/Users/jenna1/Zotero/storage/VDV4FU6Y/Szabo et al. - 2012 - Do pathogen spillover, pesticide use, or habitat l.pdf:application/pdf;Snapshot:/Users/jenna1/Zotero/storage/USKHMDHB/j.1755-263X.2012.00234.html:text/html},
