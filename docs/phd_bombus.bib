	keywords = {reproduction, bumble bee, Bombus impatiens, habitat quality, nest density, Bombus griseocollis, detection probability, mark–resight},
	pages = {e03642},
	file = {Full Text PDF:/Users/jenna1/Zotero/storage/RN6AU6TU/Pugesek and Crone - 2021 - Contrasting effects of land cover on nesting habit.pdf:application/pdf;Snapshot:/Users/jenna1/Zotero/storage/2VGCZTEM/ecs2.html:text/html},
