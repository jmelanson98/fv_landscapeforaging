@article{walther-hellwigForagingHabitatsForaging2000,
	title = {Foraging habitats and foraging distances of bumblebees, {Bombus} spp. ({Hym}., {Apidae}), in an agricultural landscape},
	volume = {124},
	issn = {1439-0418},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1046/j.1439-0418.2000.00484.x},
