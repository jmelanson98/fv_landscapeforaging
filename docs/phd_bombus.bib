	year = {2024},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/ecy.4284},
	keywords = {bumblebees, coexistence, colony, individual, interspecific competition, intraspecific competition, resource partitioning},
	pages = {e4284},
