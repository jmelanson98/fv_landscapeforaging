	keywords = {agri-environment, pollination, bumblebees, floral resources, flowering phenology, nectar, pollinator conservation, restoration},
	pages = {1585--1596},
	file = {Full Text PDF:/Users/jenna1/Zotero/storage/FZM2CUZG/Timberlake et al. - 2019 - Phenology of farmland floral resources reveals sea.pdf:application/pdf;Snapshot:/Users/jenna1/Zotero/storage/PSWFDV6I/1365-2664.html:text/html},
