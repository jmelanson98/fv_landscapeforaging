	urldate = {2021-10-31},
	journal = {Proceedings of the Royal Society B: Biological Sciences},
	author = {Cohen, Hamutahl and Smith, Gordon P. and Sardiñas, Hillary and Zorn, Jocelyn F. and McFrederick, Quinn S. and Woodard, S. Hollis and Ponisio, Lauren C.},
	month = oct,
	year = {2021},
	note = {Publisher: Royal Society},
	keywords = {agriculture, wild bees, Apis mellifera, hedgerow, mass-flowering crop, parasitism},
	pages = {20211369},
	file = {Full Text PDF:/Users/jenna1/Zotero/storage/ISSXSN9K/Cohen et al. - 2021 - Mass-flowering monoculture attracts bees, amplifyi.pdf:application/pdf},
